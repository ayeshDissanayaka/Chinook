@typeparam TEntity
<div>
<input class="form-control" style="max-width:300px" placeholder="Search Artist..." @bind="searchItem" />
<button class="form-control" style="max-width:90px" @onclick=OnSearchClicked>Find</button>
</div>
@code {
    [Parameter]
    public List<TEntity> Items { get; set; }

    [Parameter]
    public EventCallback<string> OnSearch { get; set; }
    private string searchItem;
    private async Task OnSearchClicked()
    {
        await OnSearch.InvokeAsync(searchItem);
    }
}
